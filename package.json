{
  "name": "remasters-rpg",
  "version": "0.2.0-alpha",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:i18n && npm run build:ts && npm run build:scss",
    "build:i18n": "node scripts/build-i18n.mjs",
    "build:ts": "tsc -p tsconfig.json",
    "build:scss": "sass scss/remasters-rpg.scss dist/remasters-rpg.css --no-source-map",
    "watch:ts": "tsc -p tsconfig.json --watch",
    "watch:scss": "sass --watch scss/remasters-rpg.scss:dist/remasters-rpg.css",
    "release:package": "bash scripts/prepare-release.sh"
  },
  "devDependencies": {
    "sass": "^1.93.2",
    "typescript": "^5.9.3"
  }
}
